{
  "name": "typing-game",
  "version": "1.0.0",
  "description": "Typing Game",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-watch": "parcel watch ./client/index.html",
    "start-watch": "nodemon server/server.js",
    "dev": "concurrently --kill-others \"npm run start-watch\" \"npm run build-watch\"",
    "start": "node server/server.js",
    "build": "NODE_OPTIONS=--max-old-space-size=4096 parcel build ./client/index.html && cp ./client/_redirects ./dist/"
